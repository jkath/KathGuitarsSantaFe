<% form_for @project_pic, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
	<%= f.hidden_field :project_id, :value => session[:project_id] %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 120 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5, :cols => 80 %>
  </p>
  <p>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
